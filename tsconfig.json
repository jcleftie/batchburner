{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "lib": ["esnext", "dom"],
    "types": ["vite/client"],
    "strict": true,
    "allowJs": true,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "inlineSourceMap": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"],
      "/src/*": ["./src/*"],
      "@ns": ["./NetscriptDefinitions.d.ts"],
      "@types": [
        "./src/dt1batch/types.d.ts"
      ],
      "@utils": [
        "./src/dt1batch/utils.ts"
      ],
      "@types4": [
        "./src/4batch/types.d.ts"
      ],
      "@utils4": [
        "./src/4batch/utils.ts"
      ],
      "@earlytypes": [
        "./src/reset/types.d.ts"
      ],
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/**.*.ts",
    "src/**/**.*.js",
    "src/**/**/**.*.ts",
    "src/**/**/**.*.js",
    "NetscriptDefinitions.d.ts",
    "vite.config.ts",
    "vite.config.js"
  ],
  "exclude": ["node_modules", ".oldbatcher_backup"]
}
